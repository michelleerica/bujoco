<!DOCTYPE html>
<html>
  <head>
    <title>Projectbujo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>

    <!--bootstrap  -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>


    <meta name="viewport" content="width=device-width, initial-scale=1">


  </head>

  <nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand active" href="/">Bujo collective</a>
    </div>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Create', new_design_path%></li>
      <li><%= link_to 'Designs', user_path(@current_user)%></li>

</ul>
<ul class='nav navbar-nav navbar-right'>
      <% unless @current_user.present?%>
        <li><%=link_to 'Login', login_path %>  </li>
        <li><%=link_to 'Sign up', new_user_path%></li>
      <%else%>
        <li><%= link_to 'Logout', login_path, method: :delete%></li>
        <%#raise 'hell'%>
        <li><%= link_to  "name #{@current_user.name}", user_path(@current_user)%></li>
      <%end%>
    </ul>




    </ul>
  </div>
</nav>


  <body class="<%=controller_name%> <%=action_name%>">

    <%= yield %>
  </body>
</html>
